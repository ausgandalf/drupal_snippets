{% extends "page.html.twig" %}

{% set page_content_class = 'content--user content--user-guest content--reset-password' %}

{% block page_hero %}
	{%
		set heroData = {
			'hero' : {
				'custom_breadcrumbs': [
					{
						'url': '/',
						'title': 'Home'
					},
					{
						'title': 'Reset Password'
					}
				],
				'title': page_title,
			}
		}
	%}
	{% include directory ~ '/templates/_includes/components/hero.html.twig' with heroData %}
{% endblock %}

{% block content %}
<div class="property-block property-block--forgot-password layout--2cols">
	<div class="column--left">
		<div class="inner">
			{{ page.content }}
		</div>
	</div>
	<div class="column--right">
		<div class="inner text-content">
			{{ _guide|raw }}
		</div>
	</div>
</div>
{% endblock %}