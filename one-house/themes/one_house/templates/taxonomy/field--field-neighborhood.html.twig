{%- for item in items -%}
  {% set _external_url = item.content['#options'].entity.field_external_url.0.value %}
  {% if _external_url %}
    <a href="{{ _external_url }}" target="_blank" hreflang="en">{{- item.content|render|striptags -}}</a>
  {% else %}
    {{- item.content|render|striptags -}}
  {% endif %}
{%- endfor -%}