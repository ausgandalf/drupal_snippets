{% set _hasImage = content.field_ip_blockquote_image|field_value %}

{%
  set classes = [
    'paragraph-widget',
    'paragraph-widget--blockquote',
  ]
%}

{% block paragraph %}

<div {{attributes.addClass(classes).setAttribute('id','ip_paragraph_adv-'~paragraph.id())}}>

  {% block content %}

  <div class="blockquote_inner">
    <blockquote class="blockquote {{ _hasImage ? 'has-image' }}">
      <div class="blockquote__quote-container">
        <div class="blockquote__quote-symbol">
          <svg aria-hidden="false" width="105" height="80">
              <use xlink:href="#icon-onehouse_blockquote_quote_icon"></use>
          </svg>
        </div>
        <h3 class="blockquote__quote">{{ content.field_ip_blockquote_quote|raw }}</h3>
        {% if content.field_ip_blockquote_author|field_value %}
          <p class="blockquote__author">
            {{ content.field_ip_blockquote_author }}
            {% if content.field_ip_blockquote_author_title|field_value %}
              ,<br />&mdash; <cite class="blockquote__source">{{ content.field_ip_blockquote_author_title }}</cite>
            {% endif %}
          </p>
        {% endif %}
      </div>

      {% if _hasImage %}
      <div class="blockquote__footer">
        <div class="blockquote__portrait">
          {{ content.field_ip_blockquote_image }}
        </div>
      </div>
      {% endif %}

    </blockquote>
  </div>

  {% endblock %}

</div>
{% endblock paragraph %}