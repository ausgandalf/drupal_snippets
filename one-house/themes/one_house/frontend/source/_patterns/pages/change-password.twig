{% extends "@pages/page-structure.twig" %}
{% block content %}
    {% include "@components/hero/hero--internal.twig" with internal_hero %}
<div class="layout--sidebar">
    <div class="block--sidebar">
        <nav role="navigation" aria-labelledby="block-biddermainmenu-menu" id="block-biddermainmenu">
            <h2 class="visually-hidden" id="block-biddermainmenu-menu">Bidder Main Menu</h2>
            <nav class="nav nav--bidder" aria-label="Bidder Menu in Side">
                <div class="nav__list">
                    <ul>
                        <li class="menu-item">
                            <a href="/bidder/my-dashboard">
                                <span class="icon">
                                    <svg aria-hidden="false" width="21" height="21">
                                        <use xlink:href="#icon-onehouse_my_dashboard_active"></use>
                                    </svg>
                                </span>
                                <span class="title">My Dashboard</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/bidder/my-bidder-status">
                                <span class="icon">
                                    <svg aria-hidden="false" width="27" height="27">
                                        <use xlink:href="#icon-onehouse_status_default"></use>
                                    </svg>
                                </span>
                                <span class="title">My Bidder Status</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/bidder/one-house-match">
                                <span class="icon">
                                    <svg aria-hidden="false" width="26" height="22">
                                        <use xlink:href="#icon-onehouse_one_house_match"></use>
                                    </svg>
                                </span>
                                <span class="title">One House Match</span>
                            </a>
                        </li>
                        <li class="menu-item menu-item--active-trail">
                            <a href="/bidder/account-details">
                                <span class="icon">
                                    <svg aria-hidden="false" width="19" height="26">
                                        <use xlink:href="#icon-onehouse_change_password"></use>
                                    </svg>
                                </span>
                                <span class="title">Change Password</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/user/logout">
                                <span class="icon">
                                    <svg aria-hidden="false" width="19" height="26">
                                        <use xlink:href="#icon-onehouse_log-out"></use>
                                    </svg>
                                </span>
                                <span class="title">Log Out</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </nav>
    </div>
    <div class="block--main">
	    <div data-drupal-messages-fallback="" class="hidden"></div>
        <div class="paragraph-widget paragraph-widget--profile-form" id="ip_paragraph_adv-3">
            <script>
                function cancel_bidder_option(me) {
                    let _form = me.closest('form');
                    if (!_form) return false;

                    let _opt = _form.querySelector('[name="field_user_participate"][value="0"]');
                    if (!_opt) return false;

                    _opt.setAttribute('checked', true);
                    return true;
                }
            </script>
            <form class="change-pwd-form" data-drupal-selector="change-pwd-form" action="/bidder/account-details" method="post" id="change-pwd-form" accept-charset="UTF-8">
                <div data-drupal-selector="edit-account" id="edit-account" class="js-form-wrapper form-wrapper">
                    <h3>Change Your Password</h3>
                    <div class="js-form-item form-item js-form-type-password form-item-current-pass js-form-item-current-pass">
                        <label for="edit-current-pass" class="js-form-required form-required">Current Password</label>
                        <input autocomplete="off" data-drupal-selector="edit-current-pass" aria-describedby="edit-current-pass--description" type="password" id="edit-current-pass" name="current_pass" size="25" maxlength="128" class="form-text required" required="required" aria-required="true">
                        <div id="edit-current-pass--description" class="description">Required if you want to change the <em class="placeholder">Password</em> below. <a href="/user/password" title="Send password reset instructions via email.">Reset your password</a>.</div>
                    </div>
                    <div id="edit-pass" class="js-form-item form-item js-form-type-password-confirm form-item-pass js-form-item-pass form-no-label">
                        <div class="js-form-item form-item js-form-type-password form-item-pass-pass1 js-form-item-pass-pass1 password-parent">
                            <label for="edit-pass-pass1" class="js-form-required form-required">New Password</label>
                            <input class="password-field js-password-field form-text required" autocomplete="new-password" data-drupal-selector="edit-pass-pass1" type="password" id="edit-pass-pass1" name="pass[pass1]" size="25" maxlength="128" required="required" aria-required="true" data-once="password">
                            <div class="password-strength">
                                <div class="password-strength__meter" data-drupal-selector="password-strength-meter">
                                    <div class="password-strength__indicator" data-drupal-selector="password-strength-indicator"></div>
                                </div>
                                <div aria-live="polite" aria-atomic="true" class="password-strength__title">Password strength: <span class="password-strength__text" data-drupal-selector="password-strength-text"></span></div>
                            </div>
                        </div>
                        <div class="js-form-item form-item js-form-type-password form-item-pass-pass2 js-form-item-pass-pass2 confirm-parent">
                            <label for="edit-pass-pass2" class="js-form-required form-required">Confirm New Password</label>
                            <input class="password-confirm js-password-confirm form-text required" autocomplete="new-password" data-drupal-selector="edit-pass-pass2" type="password" id="edit-pass-pass2" name="pass[pass2]" size="25" maxlength="128" required="required" aria-required="true">
                            <div aria-live="polite" aria-atomic="true" class="password-confirm-message" data-drupal-selector="password-confirm-message">Passwords match: <span data-drupal-selector="password-match-status-text"></span></div>
                        </div>
                        <div class="password-suggestions" style="display: none;"></div>
                        <div id="edit-pass--description" class="description">To change the current user password, enter the new password in both fields.</div>
                    </div>
                </div>
                <input autocomplete="off" data-drupal-selector="form-ca1349-n-k8ue4q2ogwjvxadwz5ktsypfcy2faj-n7q" type="hidden" name="form_build_id" value="form-CA1349-N_k8UE4Q2OgwJVXAdwZ5ktSYpfcY2fAJ_n7Q">
                <input data-drupal-selector="edit-change-pwd-form-form-token" type="hidden" name="form_token" value="LZzSK9lTvL62hPN16HYphxn0-Q-bXui5xBOoqh8s7jk">
                <input data-drupal-selector="edit-change-pwd-form" type="hidden" name="form_id" value="change_pwd_form">
                <div data-drupal-selector="edit-actions" class="form-actions js-form-wrapper form-wrapper" id="edit-actions">
                    <input data-drupal-selector="edit-submit" type="submit" id="edit-submit" name="op" value="Save Changes" class="button js-form-submit form-submit">
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}