{% extends "@pages/page-structure.twig" %}
{% block content %}
    {% include "@components/hero/hero--internal.twig" with internal_hero %}

<div class="property-block layout--2cols">
    <div class="property-block property-block--sign-in column--left">
        <div class="inner">
			<div data-drupal-messages-fallback="" class="hidden"></div>
	        <div class="local-tasks-menu-wrapper">
                <h2 class="visually-hidden">Primary tabs</h2>
                <ul class="primary">
                    <li><a href="/user/login" data-drupal-link-system-path="user/login">Log in</a></li>
                    <li><a href="/user/register" data-drupal-link-system-path="user/register" class="is-active">Create new account<span class="visually-hidden">(active tab)</span></a></li>
                    <li><a href="/user/password" data-drupal-link-system-path="user/password">Reset your password</a></li>
                </ul>
            </div>
            <h3>Welcome, let's create your account.</h3>
            <form class="user-register-form user-form" data-user-info-from-browser="" data-drupal-selector="user-register-form" action="/user/register" method="post" id="user-register-form" accept-charset="UTF-8" data-once="form-updated user-info-from-browser" data-drupal-form-fields="edit-mail,edit-name,edit-pass-pass1,edit-pass-pass2,edit-field-user-accept-value,edit-submit">
                <div data-drupal-selector="edit-account" id="edit-account" class="js-form-wrapper form-wrapper">
                    <div class="js-form-item form-item js-form-type-email form-item-mail js-form-item-mail">
                        <label for="edit-mail" class="js-form-required form-required">Email address</label>
                        <input data-drupal-selector="edit-mail" aria-describedby="edit-mail--description" type="email" id="edit-mail" name="mail" value="" size="60" maxlength="254" class="form-email required" required="required" aria-required="true">
                        <div id="edit-mail--description" class="description">The email address is not made public. It will only be used if you need to be contacted about your account or for opted-in notifications.</div>
                    </div>
                    <div class="js-form-item form-item js-form-type-textfield form-item-name js-form-item-name">
                        <label for="edit-name" class="js-form-required form-required">Username</label>
                        <input class="username form-text required" autocorrect="off" autocapitalize="off" spellcheck="false" data-drupal-selector="edit-name" aria-describedby="edit-name--description" type="text" id="edit-name" name="name" value="" size="60" maxlength="60" required="required" aria-required="true">
                        <div id="edit-name--description" class="description">Several special characters are allowed, including space, period (.), hyphen (-), apostrophe ('), underscore (_), and the @ sign.</div>
                    </div>
                    <div id="edit-pass" class="js-form-item form-item js-form-type-password-confirm form-item-pass js-form-item-pass form-no-label">
                        <div class="js-form-item form-item js-form-type-password form-item-pass-pass1 js-form-item-pass-pass1 password-parent">
                            <label for="edit-pass-pass1" class="js-form-required form-required">Password</label>
                            <input class="password-field js-password-field form-text required" autocomplete="new-password" data-drupal-selector="edit-pass-pass1" type="password" id="edit-pass-pass1" name="pass[pass1]" size="25" maxlength="128" required="required" aria-required="true" data-once="password">
                            <div class="password-strength">
                                <div class="password-strength__meter" data-drupal-selector="password-strength-meter">
                                    <div class="password-strength__indicator" data-drupal-selector="password-strength-indicator"></div>
                                </div>
                                <div aria-live="polite" aria-atomic="true" class="password-strength__title">Password strength: <span class="password-strength__text" data-drupal-selector="password-strength-text"></span></div>
                            </div>
                        </div>
                        <div class="js-form-item form-item js-form-type-password form-item-pass-pass2 js-form-item-pass-pass2 confirm-parent">
                            <label for="edit-pass-pass2" class="js-form-required form-required">Confirm password</label>
                            <input class="password-confirm js-password-confirm form-text required" autocomplete="new-password" data-drupal-selector="edit-pass-pass2" type="password" id="edit-pass-pass2" name="pass[pass2]" size="25" maxlength="128" required="required" aria-required="true">
                            <div aria-live="polite" aria-atomic="true" class="password-confirm-message" data-drupal-selector="password-confirm-message">Passwords match: <span data-drupal-selector="password-match-status-text"></span></div>
                        </div>
                        <div class="password-suggestions" style="display: none;"></div>
                        <div id="edit-pass--description" class="description">Provide a password for the new account in both fields.</div>
                    </div>
                </div>
                <input autocomplete="off" data-drupal-selector="form-h4hzio22jjrwvcj2qsfdk803lzi2eczl8xxracxiew8" type="hidden" name="form_build_id" value="form-H4hziO22JJrWVcj2qSFdK803LzI2EcZL8XxracxIEW8">
                <input data-drupal-selector="edit-user-register-form" type="hidden" name="form_id" value="user_register_form">
                <div class="field--type-boolean field--name-field-user-accept field--widget-boolean-checkbox js-form-wrapper form-wrapper" data-drupal-selector="edit-field-user-accept-wrapper" id="edit-field-user-accept-wrapper">
                    <div class="js-form-item form-item js-form-type-checkbox form-item-field-user-accept-value js-form-item-field-user-accept-value">
                        <input data-drupal-selector="edit-field-user-accept-value" type="checkbox" id="edit-field-user-accept-value" name="field_user_accept[value]" value="1" class="form-checkbox required" required="required" aria-required="true">
                        <label for="edit-field-user-accept-value" class="option js-form-required form-required"><span class="checkbox"></span>
                            <p>I accept the <a href="/terms-and-conditions">terms and conditions</a> of use.</p>
                        </label>
                    </div>
                </div>
                <div data-drupal-selector="edit-actions" class="form-actions js-form-wrapper form-wrapper" id="edit-actions">
                    <input data-drupal-selector="edit-submit" type="submit" id="edit-submit" name="op" value="Sign Up" class="button button--primary js-form-submit form-submit">
                </div>
                <fieldset class="fieldset_user_link fieldset_login_link js-form-item form-item js-form-wrapper form-wrapper" data-drupal-selector="edit-login-link" id="edit-login-link">
                    <legend><span class="fieldset-legend"></span></legend>
                    <div class="fieldset-wrapper">Already have an account? <a href="/user/login">Sign In</a></div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="property-block property-block--how-it-works column--right">
        <div class="inner text-content">
            <h2>How it Works</h2>
            <ul>
                <li>Create a new account to take advantage of our new online portal omnis iste natus</li>
                <li>Edit your profile with your contact information for the One House Match system omnis iste natus</li>
                <li>Submit your bidder application to be able to make offers on properties at auction and up for immediate sale omnis iste natus</li>
                <li>Let us know what you're looking for with One House Match omnis iste natus</li>
                <li>Get info straight to your email regarding the properties you are interested in omnis iste natus</li>
            </ul>
        </div>
    </div>
</div>

{% endblock %}